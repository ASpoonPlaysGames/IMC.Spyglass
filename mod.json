{
    "Name": "IMC.Spyglass",
    "Description": "A server-side mod that handles punishing players from a curated reports list on the Northstar Discord server.",
    "Version": "1.0.0",
    "LoadPriority": 1,
    "ConVars": [
        {
            "Name": "spyglass_chat_welcome",
            "DefaultValue": "1"
        },
        {
            "Name": "spyglass_welcome_message",
            "DefaultValue": "This server is monitored by \\x1b[38;5;208mSpyglass\\x1b[0m. Global sanctions are in effect."
        },
        {
            "Name": "spyglass_sanctions_notifications",
            "DefaultValue": "1"
        },
        {
            "Name": "spyglass_global_sanctions_notifications",
            "DefaultValue": "1"
        },
        {
            "Name": "spyglass_spamming_weight",
            "DefaultValue": "0.2"
        },
        {
            "Name": "spyglass_toxicity_weight",
            "DefaultValue": "0.3"
        },
        {
            "Name": "spyglass_discrimination_weight",
            "DefaultValue": "0.6"
        },
        {
            // The amount of weight a "Cheating" infraction has on a sanctions calculation score.
            "Name": "spyglass_cheating_weight",
            "DefaultValue": "2.0"
        },
        {
            // The amount of infraction points a player needs to reach before being automatically banned.
            "Name": "spyglass_ban_score_threshold",
            "DefaultValue": "2.0"
        },
        {
            // The amount of infraction points a player needs to reach before being automatically muted.
            "Name": "spyglass_mute_score_threshold",
            "DefaultValue": "0.5"
        },
        {
            // The amount of infraction points a player needs to reach before being automatically warned (requires spyglass_sanctions_notifications.
            "Name": "spyglass_warn_score_threshold",
            "DefaultValue": "0.1"
        },
        {
            // Whether or not we should add the player to the banlist.txt if they reach the Ban threshold.
            "Name": "spyglass_use_banlist_for_bans",
            "DefaultValue": "0"
        },
        {
            // Whether or not to notify a muted player when their message wasn't sent due to a mute.
            "Name": "spyglass_notify_muted_player",
            "DefaultValue": "1"
        }
    ],
    "Scripts": [
        {
            "Path": "utils.nut",
            "RunOn": "SERVER && MP"
        },
        {
            "Path": "models.nut",
            "RunOn": "SERVER && MP"
        },
        {
            "Path": "autogen_database.nut",
            "RunOn": "SERVER && MP",
            "ServerCallback":
            {
                "After": "Spyglass_Database_Init"
            }
        },
        {
            "Path": "spyglass.nut",
            "RunOn": "SERVER && MP",
            "ServerCallback":
            {
                "After": "Spyglass_Init"
            }
        }
    ]
}